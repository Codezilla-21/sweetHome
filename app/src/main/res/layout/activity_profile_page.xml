<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profilePage">


    <RelativeLayout
        android:layout_width="120dp"
        android:layout_centerInParent="true"
        android:background="@drawable/log_out"
        android:layout_height="50dp"
        android:layout_marginLeft="275dp"
        android:layout_marginTop="9dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/log_out"
            android:layout_margin="3dp"
            app:tint="#fff"

            />

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="#C7B198"
            android:padding="5dp"
            >
            <ImageView
                android:id="@+id/logButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logout"
                app:tint="#fff"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:fontFamily="@font/architects_daughter"
            android:gravity="center"
            android:text="LogOut"
            android:textColor="#FF453019"
            android:textSize="15sp"
            android:textStyle="bold">

        </TextView>
    </RelativeLayout>




    <RelativeLayout
        android:layout_width="150dp"
        android:layout_centerInParent="true"
        android:background="@drawable/log_out"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="300dp">

        <TextView
            android:id="@+id/updateProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/architects_daughter"
            android:gravity="center"
            android:text="Update Profile Image"
            android:textColor="#FF453019"
            android:textSize="15sp"
            android:textStyle="bold">

        </TextView>
    </RelativeLayout>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="60dp"
        android:layout_height="51dp"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="242dp"
        android:fontFamily="@font/architects_daughter"
        android:gravity="center"
        android:textColor="#6A98A1"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_anchor="@+id/textView3"
        app:layout_anchorGravity="end|bottom" />

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="147dp"
        android:layout_height="147dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/profile"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_anchor="@+id/profile_image"
        app:layout_anchorGravity="center" />

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#C7B198"
        app:fabCradleMargin="10dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        app:fabCradleRoundedCornerRadius="50dp"
        >

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@android:color/transparent"
            app:itemIconTint="#C7B198"
            app:itemTextColor="#453019"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/nav"
            />


    </com.google.android.material.bottomappbar.BottomAppBar>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:src="@drawable/add"
        app:layout_anchor="@id/bottomAppBar"
        app:maxImageSize="50dp"

        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>